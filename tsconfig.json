{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["@cloudflare/workers-types"],
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "worker.js",
    "worker-backend.js",
    "mailer.js",
    "mailer.d.ts",
    "js/**/*",
    "utils/**/*"
  ]
}
